<BorderPane fx:controller="com.cs56fitnessapp.controllers.StrengthController" prefHeight="800.0" prefWidth="1200.0" styleClass="pane__wrapper" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <HBox alignment="CENTER" styleClass="nav">
         <Label fx:id="title" prefHeight="64.0" styleClass="nav__title" text="Strength Training" />
      </HBox>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="144.0" layoutY="45.0" text="Weight Amount" textFill="#fbff96">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label layoutX="201.0" layoutY="97.0" text="Duration" textFill="#fbff96">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="trainingDuration" layoutX="294.0" layoutY="96.0" opacity="0.5" prefHeight="26.0" prefWidth="130.0" />
            <ChoiceBox fx:id="weightAmt" layoutX="294.0" layoutY="44.0" opacity="0.5" prefHeight="26.0" prefWidth="130.0">
               <items>
                  <FXCollections fx:factory="observableArrayList">
                     <StrengthTrainingLevel fx:value="HEAVY" />
                     <StrengthTrainingLevel fx:value="MEDIUM" />
                     <StrengthTrainingLevel fx:value="LIGHT" />
                  </FXCollections>
               </items>
            </ChoiceBox>
             <Button onAction="#addStrength" fx:id="submit" layoutX="489.0" layoutY="186.0" mnemonicParsing="false" opacity="0.5" prefHeight="35.0" prefWidth="80.0" style="-fx-background-color: #ffffff;" text="Submit" textFill="#59517d">
